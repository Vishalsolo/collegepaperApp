<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Collegepapers" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/nightblueshadow</item>
        <item name="colorPrimaryVariant">@color/nightblueshadow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Collegepapers" parent="Base.Theme.Collegepapers" />

    <style name="ScreenBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="CardBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/lavender</item>
    </style>

    <style name="ImageChange">
        <item name="android:textColor">@color/lavender</item>
    </style>

    <style name="Theme.Collegepapers.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Collegepapers.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Collegepapers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>